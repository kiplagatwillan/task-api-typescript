generator client {
  provider = "prisma-client-js"
}



datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  id          String  @id @default(uuid())
  title       String  @map("task_title")
  description String  @map("task_description")
  isComplete  Boolean @default(false) @map("complete_check")

  @@map("tasks")
}